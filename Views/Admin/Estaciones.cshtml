@model IEnumerable<MVClog.Models.ActivoPM>
@{
    ViewBag.Title = "Charts";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
 
                   <div class="container-fluid" ng-app="">

                                <div class="row">
                                    <div class="col-lg-12">
                                        <h2 class="page-header">Reportes</h2>
                                        <p class="lead"> </p>
                                    </div>
                                </div>
                                <div class="row" ng-controller="dropdownctrl">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h3>Seleccione la Estacion</h3>
                                            <select class="form-control" id="sel1"
                                                    ng-options="a.Name for a in StationMas"
                                                    ng-model="station"
                                                    ng-change="OnDeptChange()"
                                                    name="Name" data-live-search="true"
                                                    style="width:200px;">
                                               
                                            </select>

                                            <div class="container-fluid">
                                                <div id="containerstation" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class=""></div>
                                </div>
                                <!-- /.row -->
                                <div class="row" ng-controller="activoctrl">

                                    <h3>Buscar por fechas</h3>
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">
                                            <form ng-submit="search()">

                                                fecha incial <input type="date" ng-model="fechastart" style="color:black;" />
                                                fecha final<input type="date" ng-model="fecha" style="color:black;" />

                                                <button type="submit" class="btn btn-default">Search</button>
                                            </form>
                                        </div>
                                        <div class="panel-body">

                                            <h4>Monitoreo activo</h4>
                                            <div id="containerp" style="min-width: 500px; height: 400px; margin: 0 auto"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Graficos en Areaspline</h3>
                                            </div>
                                            <div class="panel-body" ng-controller="EstacionesCtrlNo2">
                                                <div class="flot-chart">
                                                    <div id="containerNo2" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                                                    @*<div class="flot-chart-content" id="flot-multiple-axes-chart"></div>*@
                                                </div>
                                                <div class="text-right">
                                                    <a href="#">detalles <i class="fa fa-arrow-circle-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Graficos en Areaspline</h3>
                                            </div>
                                            <div class="panel-body" ng-controller="EstacionesCtrlOzono">
                                                <div class="flot-chart">
                                                    <div id="containerOzono" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                                                    @*<div class="flot-chart-content" id="flot-multiple-axes-chart"></div>*@
                                                </div>
                                                <div class="text-right">
                                                    <a href="#">detalles <i class="fa fa-arrow-circle-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->

                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="panel panel-green">
                                            <div class="panel-heading">
                                                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>Graficos en pie</h3>
                                            </div>
                                            <div class="panel-body" ng-controller="PieCtrl">
                                                <div class="flot-chart">
                                                    <div id="containerPie" style="height: 400px"></div>
                                                    @*<div id="containerPie" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>*@
                                                </div>
                                                <div class="text-right">
                                                    <a href="#">detalles <i class="fa fa-arrow-circle-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="panel panel-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i> Graficos en spline</h3>
                                            </div>
                                            <div class="panel-body" ng-controller="ChartCtrl">
                                                <div class="flot-chart">
                                                    <div id="containerc" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                                                    @*<div class="flot-chart-content" id="flot-line-chart"></div>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row -->
                         </div>

